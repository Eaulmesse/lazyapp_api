{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsc && node dist/app.js",
    "watch": "tsc --watch",
    "dev:watch": "nodemon",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm migration:generate -- -d ormconfig.ts",
    "migration:run": "npm run typeorm migration:run -- -d ormconfig.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ormconfig.ts",
    "migration:show": "npm run typeorm migration:show -- -d ormconfig.ts"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mailgun-js": "^0.22.0",
    "mongoose": "^8.16.4",
    "mysql": "^2.18.1",
    "mysql2": "^3.14.2",
    "nodemailer": "^6.10.1",
    "reflect-metadata": "^0.2.2",
    "resend": "^3.5.0",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mailgun-js": "^0.22.18",
    "@types/node": "^24.1.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
